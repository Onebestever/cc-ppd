<!doctype html>
<html>
<head>
    <title>User Profile</title>
   
    <!-- <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> -->
    <link rel="stylesheet" href="style/profile.css">
    <link rel="stylesheet" href="css/partner.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
<link href="https://fonts.googleapis.com/css2?family=Fredericka+the+Great&family=Fruktur&family=Rubik+Glitch&display=swap" rel="stylesheet">

</head>
<body id="partnerPage">
<div class="containerLanding">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Partner Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        <a href="/viewers" class="btn btn-default btn-sm">Home</a>
        <a href="/profile" class="btn btn-default btn-sm">Profile</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>
<!-- render stuff if this user exist -->
                <% if (user.local.email) { %>
                    <p>
                        <!-- <strong>id</strong>: <%= user._id %><br> -->
                        <strong>First Name</strong>: <%= user.local.firstName %><br>
                        <strong>Last Name</strong>: <%= user.local.lastName %><br>
                        <!-- <strong>email</strong>: <%= user.local.date %><br> -->
                        <!-- <strong>password</strong>: <%= user.local.password %> -->
                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>

                    <div class="logs">
    
                        <% console.log(journalEntries) %>
                        <ul class="entries">
                                <% for(let i=0; i<journalEntries.length; i++) {%>
                                    <div>
                                    <p class="hide"><%= journalEntries[i]._id %></p>
                                    <p class="hide"><%= journalEntries[i].starred %></p>
                                    <!-- rendering logentries -->
                                    <% if (journalEntries[i].starred === true){ %>
                                            <li style="color:pink"> <%=journalEntries[i].date %> </li>
                                            <li style="color:pink"> <%=journalEntries[i].dailyPost %>
                                            <li style="color:pink"><%= journalEntries[i].emotion %></li>
                                            <li style="color:pink"><%= journalEntries[i].stressLevel %></li>
                                            <li style="color:pink"><%= journalEntries[i].harmful %></li>
                                            <li style="color:pink"><%= journalEntries[i].note %></li>   
                                            <span><i class="fa fa-star"></i></span> 
                                            <span><i class="fa fa-trash"></i></span>                                 
                                    <% } else { %>
                                    <li style="color:black"> <%=journalEntries[i].date %> </li>
                                    <li style="color:black"> <%=journalEntries[i].dailyPost %> </li>
                                    <span><i class="fa fa-star"></i></span> 
                                    <span><i class="fa fa-trash"></i></span> 
                                   <span><i class="fa-solid fa-star-shooting"></i></span>
                                       <% }%>
                                       <% console.log('this is ',journalEntries[i]) %>
                                    </div>
                                <% } %>
                        </ul> 
                    </div>
                    <% } else { %>
                        <a href="/connect/local" class="btn btn-default">Connect Local</a>
                    <% } %>
    
                    </div>
    

                    <!-- LOCAL INFORMATION -->
                

<script src="main.js"></script>

</body>
</html>
