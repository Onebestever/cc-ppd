<body id="partner">
    <header>
            <nav>
                <ul>
                <a href="/"> <li><i class="fa fa-leaf fa" aria-hidden="true"> Home</i></li></a>
                <a href="/whoWeAre"> <li> <i class="fa fa-leaf fa" aria-hidden="true">Who We Are</i></li></a>
                <a href="/profile"> <li><i class="fa fa-leaf fa" aria-hidden="true"> Profile</i></li></a>
                <a href="/signup"> <li> <i class="fa fa-leaf fa" aria-hidden="true">Sign Up</i></li></a>
                <a href="/login"> <li><i class="fa fa-leaf fa" aria-hidden="true">Log In</i></li></a>
                <a href="/logout"> <li><i class="fa fa-leaf fa" aria-hidden="true">Log Out</i></li></a>
                <a href="/relationship"> <li><i class="fa fa-leaf fa" aria-hidden="true"> Add Viewers</i></li></a>
                <a href="/feed"> <li><i class="fa fa-leaf fa" aria-hidden="true"> View Feed</i></li></a>

            </nav>
        </section>
    </header>

        <main>

            <section class="leftSection">
                <h3><span class="fa fa-user"></span> Partner</h3>
                <!-- render stuff if this user exist -->
                                <% if (user.local.email) { %>
                                    <p>
                                        <!-- <strong>id</strong>: <%= user._id %><br> -->
                                        <strong>First Name</strong>: <%= user.local.firstName %><br>
                                        <strong>Last Name</strong>: <%= user.local.lastName %><br>
                                        <!-- <strong>email</strong>: <%= user.local.date %><br> -->
                                        <!-- <strong>password</strong>: <%= user.local.password %> -->
                                    </p>
                <section class="imageHolder">
                    <img class="profileImage" src="/img/coupleProfile.png">
                </section>
     </section>
             <section class="rightSection"> 
                       
                 <section class="logs">
                     <h2>To-Do List</h2>
                        <ul class="ToDoList">
                            <% for(var i=0; i<toDoList.length; i++) {%>
                                <li class="message">
                                    <span style="<%= toDoList[i].isStarred  ? 'color:green' : 'color:black' %>">
                                      <%= toDoList[i].chore %> </span>
                                  </li>
                                <li class="message">  Date:<%= toDoList[i].date %> </li>
                                <li>  Task:<%= toDoList[i].chore %>  </li>
                                <!-- <li>Posted By:<%= toDoList[i].postedBy %> </li>   -->
                                <span><i data-toDoStarred="<%= toDoList[i].isStarred %>" data-toDoId="<%= toDoList[i]._id %>"
                                    class="fa fa-star"></i></span>
                                <span><i data-toDoId="<%= toDoList[i]._id %>" class="fa fa-trash"></i></span>
                             
                            <% } %>
                                </ul> 
                                
                                    <% } else { %>
                                        <a href="/connect/local" class="btn btn-default">Connect Local</a>
                                    <% } %>
                      </section>
             </section>
         
    
                            <!-- LOCAL INFORMATION -->
    </main>
    <footer>
        <section class="img">
            <img class="ad" src="images/ad.jpg">
          </section>
        
           <h4 class="title">Post Partum Direction Copyright Â©2022 </h4>
              <span class="rightSpan">Carla Hores</span>
    </footer>
                


<script src="partner.js"></script>

